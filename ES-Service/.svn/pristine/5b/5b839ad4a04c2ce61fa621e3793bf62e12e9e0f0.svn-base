		<artifactId>entitlement-service</artifactId>
		<version>10.3.6-005-SNAPSHOT</version>
	</parent>
	
	<artifactId>service-war</artifactId>
	

	<packaging>war</packaging>

	

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<!-- <version>2.1.1</version>  -->
				<configuration>
					<archive>
			          <addMavenDescriptor>false</addMavenDescriptor>
			          <manifestEntries>
							<Built-By>${user.name}</Built-By>
							<Build-Jdk>${java.version}</Build-Jdk>
							<Created-By>HP EG-IT</Created-By>
							<Implementation-Title>service_war</Implementation-Title>
							<Implementation-Version>${project.version}</Implementation-Version>
							<Implementation-Vendor-Id>com.hp.it.111467.iibfork</Implementation-Vendor-Id>
							<Implementation-Build>${buildNumber}</Implementation-Build>
						</manifestEntries>
			        </archive>
					<warName>ES10_1</warName>
					<!-- <outputDirectory>C:/tools/tomcat60/sbs-services/</outputDirectory> -->
					<webAppSourceDirectory>${basedir}/src/main/webapp/</webAppSourceDirectory>
					<webXml>${basedir}/src/main/webapp/WEB-INF/web.xml</webXml>
					<!-- <packagingExcludes>WEB-INF/lib/sbs-compliancevalidation-transport-client-all-*.jar,WEB-INF/lib/jaxb-api-2.1.jar,WEB-INF/lib/jaxws-api-2.1.jar,WEB-INF/lib/stax-api-1.0-2.jar,WEB-INF/lib/jsr181-api-2.2.1.jar,WEB-INF/lib/logback-classic-*.jar</packagingExcludes> -->
					<packagingExcludes>WEB-INF/lib/logback-*.jar</packagingExcludes>					
	      		</configuration>
			</plugin>
		</plugins>
	</build>


	<dependencies>
		<dependency>
			<groupId>com.hp.it.111467.iibfork</groupId>
			<artifactId>service</artifactId>
			<scope>compile</scope>
			<exclusions>
				<exclusion>
					<artifactId>sbs-compliancevalidation-service-stub</artifactId>
					<groupId>com.hp.it.201101</groupId>					
				</exclusion>						
				<!-- <exclusion>
					<artifactId>javax.xml.bind</artifactId>
					<groupId>jaxb-api</groupId>
				</exclusion>				
				<exclusion>
					<artifactId>javax.xml.ws</artifactId>
					<groupId>jaxws-api</groupId>
				</exclusion>
				<exclusion>
					<artifactId>javax.jws</artifactId>
					<groupId>jsr181-api</groupId>
				</exclusion>  -->
			</exclusions>
		</dependency>
			<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
		  <groupId>com.bea</groupId>
		  <artifactId>weblogic-full-client</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			  <groupId>org.slf4j</groupId>
			  <artifactId>slf4j-nop</artifactId>
			  <scope>compile</scope>
		</dependency>
	</dependencies>

</project>
