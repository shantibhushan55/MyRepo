<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.hp.it.111467.iibfork</groupId>
		<artifactId>entitlement-service</artifactId>
		<!--  <version>10.1.7-114-SNAPSHOT</version> -->
		<version>10.3.6-005-SNAPSHOT</version>
		
	</parent>
	
	<artifactId>service-ear</artifactId>
	<packaging>ear</packaging>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<!--  <version>2.6</version>-->
		        <configuration>
			        <!-- Make sure it is a Java EE 5 EAR -->
	          		<version>5</version>
			        <!-- configuration elements goes here -->
	          		<modules>
				    	<webModule>
					        <groupId>${project.groupId}</groupId>
					        <artifactId>service-war</artifactId>
					        <contextRoot>es/ES10_1</contextRoot>
						<bundleFileName>ES10_1.war</bundleFileName>
				         </webModule>
					</modules>
					<finalName>ES10_1</finalName>
		          <archive>
		          	<addMavenDescriptor>false</addMavenDescriptor>
		            <!-- Don't forget the Implementation Version -->
		            <manifestEntries>
            				<Built-By>${user.name}</Built-By>
              				<Build-Jdk>${java.version}</Build-Jdk>
              				<Created-By>HP EB-IT</Created-By>
							<Implementation-Service>service_ear</Implementation-Service>
              				<Implementation-Version>${project.version}</Implementation-Version>
              				<Implementation-Vendor-Id>com.hp.it.111467.iibfork</Implementation-Vendor-Id>
							<Implementation-Build>${buildNumber}</Implementation-Build>
		            </manifestEntries>
		          </archive>
					
        		</configuration>
				
			</plugin>		
			
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.hp.it.111467.iibfork</groupId>
			<artifactId>service-war</artifactId>
			<type>war</type>
			<scope>compile</scope>
	<!-- 	<version>${project.version}</version> -->	
		</dependency>
	</dependencies>
</project>
